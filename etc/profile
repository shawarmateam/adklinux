export PATH="/bin:/sbin:/usr/bin:/usr/sbin"

if [ "$PS1" ]; then
	if [ "`id -u`" -eq 0 ]; then
		export PS1='\e[31mroot\e[0m@$(hostname)\e[33m$(pwd) ^\e[0m '
	else
		export PS1='\e[32m$(whoami)\e[0m@$(hostname)\e[33m$(pwd) $\e[0m '
	fi
fi

export EDITOR='/bin/vi'

# Source configuration files from /etc/profile.d
for i in /etc/profile.d/*.sh ; do
	if [ -r "$i" ]; then
		. $i
	fi
done
unset i
clear
